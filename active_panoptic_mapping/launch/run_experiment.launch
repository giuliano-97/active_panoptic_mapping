<launch>
  <arg name="experiment_name" default="test"/>
  <arg name="duration" default="1800"/>
  <arg name="save_map_every_n_sec" default="60"/>
  <arg name="experiments_dir" default="$(optenv OUT_DIR /media/scratch1/albanesg/planning_experiments)"/>
  <node name="planning_experiment_manager" pkg="active_panoptic_mapping" type="experiment_manager.py" output="screen">
    <param name="duration" value="$(arg duration)"/>
    <param name="save_map_every_n_sec" value="$(arg save_map_every_n_sec)"/>
    <param name="out_dir" value="$(arg experiments_dir)/$(arg experiment_name)"/>
  </node>
</launch>